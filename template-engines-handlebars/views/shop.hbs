    <main>
        <h1>Product Overview</h1>
        {{# if hasProducts}}  
        <div class="grid">
            {{# each item }}           
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">{{ this.product__name}}</h1>
                </header>
                <div class="card__image">
                    <img src="{{ this.product__imgurl}}" alt="">
                </div>
                <div class="card__content">
                    <h2 class="product__price">{{ this.product__price }}</h2>
                    <p class="product__description">{{ this.product__description }}</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to card</button>
                </div>
            </article> 
            {{/ each }}           
        </div>
        {{ else }}
        <p>No products found!</p>
        {{/ if}}
    </main>